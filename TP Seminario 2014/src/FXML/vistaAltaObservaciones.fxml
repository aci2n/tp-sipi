<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vistaAltaObservacionesControlador">
   <children>
      <VBox spacing="20.0" style="-fx-background-color: white;">
         <children>
            <HBox alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="30.0" style="-fx-background-color: #3498db;">
               <children>
                  <Label text="Listado de Observaciones" textFill="WHITE" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Calibri Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 2;" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Observación" />
                  <TextArea fx:id="textObservaciones" minHeight="-Infinity" minWidth="-Infinity" prefHeight="60.0" prefWidth="300.0" promptText="Descripción de la observación" wrapText="true" HBox.hgrow="NEVER">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextArea>
                  <HBox>
                     <children>
                        <Label text="Seleccione el odontólogo a cargo: ">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Label>
                        <ComboBox fx:id="comboOdontologos2" prefWidth="150.0">
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </ComboBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Button fx:id="botonAgregarObs" mnemonicParsing="false" text="Agregar observación" />
                     </children>
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets left="40.0" right="40.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="tablaObservaciones" minHeight="-Infinity" prefHeight="200.0">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn fx:id="columnaOdontologo" prefWidth="75.0" text="Odontólogo" />
                  <TableColumn fx:id="columnaFecha" prefWidth="75.0" text="Fecha" />
                  <TableColumn fx:id="columnaDescripcion" prefWidth="75.0" text="Descripción" />
               </columns>
               <VBox.margin>
                  <Insets bottom="20.0" left="100.0" right="100.0" top="20.0" />
               </VBox.margin>
            </TableView>
            <HBox fx:id="box1" alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="botonEliminarFila" mnemonicParsing="false" text="Eliminar Fila" />
                  <Button fx:id="botonLimpiarTabla" mnemonicParsing="false" text="Limpiar Tabla" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
         </children>
         <effect>
            <DropShadow color="#95a5a6" />
         </effect>
         <StackPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
