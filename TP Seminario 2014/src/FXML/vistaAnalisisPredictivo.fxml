<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<StackPane prefHeight="249.0" prefWidth="659.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="VistaAnalisisPredictivoControlador">
   <children>
      <VBox alignment="CENTER" prefHeight="191.0" prefWidth="639.0" spacing="30.0" style="-fx-background-color: white;">
         <children>
            <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="10.0" style="-fx-background-color: #3498db;">
               <children>
                  <ImageView fx:id="imagenAnalisisPredictivo" fitHeight="20.0" fitWidth="20.0" pickOnBounds="FALSE" HBox.hgrow="NEVER">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label text="Análisis Predictivo de la Historia Clínica" textFill="WHITE">
                     <font>
                        <Font name="Calibri Bold" size="15.0" />
                     </font>
                  </Label>
               </children>
               <effect>
                  <DropShadow color="#7f8c8d" height="7.0" radius="1.25" width="0.0" />
               </effect>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label style="-fx-border-color: #95a5a6; -fx-border-radius: 2; -fx-background-color: #eef2f3;" text="Busqueda del Paciente" textFill="#7f8c8d">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="22.0" prefWidth="619.0" spacing="10.0">
               <children>
                  <Label text="Ingrese el DNI del paciente para realizar el analisis:" />
                  <TextField fx:id="textFiltrarTabla" prefWidth="250.0" promptText="Ingrese DNI unicamente" />
                  <Button fx:id="botonRealizarAnalisis" mnemonicParsing="false" onAction="#realizarAnalisis" text="Realizar análisis" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <HBox spacing="20.0">
               <children>
                  <ComboBox fx:id="comboPredicciones" prefHeight="22.0" prefWidth="378.0" promptText="Sintomas detectados" />
                  <Button fx:id="botonGraficar" mnemonicParsing="false" onAction="#mostrarPrediccionDeSintoma" prefHeight="22.0" prefWidth="101.0" text="Graficar" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </HBox>
            <VBox prefHeight="216.0" prefWidth="639.0">
               <children>
                  <BarChart fx:id="grafico">
                    <xAxis>
                      <CategoryAxis label="Sintomas" side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis label="Cantidad" side="LEFT" />
                    </yAxis>
                  </BarChart>
                  <Label fx:id="labelCantidadPacientes" text="Cantidad de pacientes analizados: 0" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets left="25.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </children>
         <effect>
            <DropShadow />
         </effect>
         <StackPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
